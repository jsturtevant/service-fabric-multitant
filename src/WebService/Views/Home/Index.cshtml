<script>
    $(function () {
		var path = window.location.pathname;

        $('#newTenant').click(function () {
		    $('#result').html('');
            var name = $('#tenantName').val();
            var params = $('#tenantParameters').val();
		    $.ajax({
		        url: path + '/api/jobservice/' + name + '/' + params,
		        method: 'POST',
		        contentType: 'application/json',
		        dataType: 'json'
		    })
            .done(function () {
                $('#jobResult').html('creating');
            })
            .error(function (error) {
                $('#jobResult').html(error);
            })
		});

      

        function refreshJobList() {
            $.ajax({
                url: path + '/api/jobservice',
                method: 'GET',
                contentType: 'application/json',
                dataType: 'json'
            })
            .done(function (jobs) {
                var jobList = $('#jobs');

                jobList.html('');
                for (var i = 0; i < jobs.length; ++i) {
                    jobList.append('<li>' + jobs[i].serviceName + '</li>');
                }
            })
            .always(function () {
                setTimeout(function () {
                    refreshJobList();
                }, 1000);
            });
        }

      
        refreshJobList();

    });
</script>